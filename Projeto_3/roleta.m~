function [newpf, newpeso] = roleta(pf,peso)

    % Ajuste dos pesos para inteiro.
    peso(:,1) = fix(peso(:,1)/min(peso(:,1)));
    % Soma dos pesos.
    somapeso = sum(peso(:,1));
    
    newpf = zeros(size(pf,1));
    newpeso = zeros(size(pf,1));
    
    for k=1:size(pf,1)
        
        % Sorteio de um valor entre 1 e somapeso.
        sorteio = randi(somapeso);
        % posicao no vetor de pesos
        pose = 0;
        
        while true
           pose = pose + 1; 
           sorteio = sorteio - peso(pose,1);
           if ~(sorteio>0)
               break;
           end
        end
        
        newpf(k,:) = pf(k,:);
        newpeso(k,:) = peso(k,:);
    end
    
    newpf = 1;
    newpeso = pose;
end

%http://programadoraprendendo.blogspot.com/2012/12/algoritmos-de-selecao-metodo-da-roleta.html
%https://www.obitko.com/tutorials/genetic-algorithms/portuguese/selection.php


